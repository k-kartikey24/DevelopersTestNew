@model DevelopersTest.MVC.Models.DTO.FIlteredStudentDTO
@{
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="bg-secondary bg-opacity-10 py-3 mb-4 rounded">
                <h1 class="text-center">See Students - Admin Functionality</h1>
            </div>

            <form method="get" asp-action="GetStudents" class="mb-4 p-4 shadow-sm rounded bg-light">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label for="searchName" class="form-label">Search by Name:</label>
                        <input type="text" id="searchName" name="searchName" value="@Model.SearchName" class="form-control" placeholder="Enter student name" />
                    </div>

                    <div class="col-md-6">
                        <label for="filterClass" class="form-label">Filter by Class:</label>
                        <select id="filterClass" name="filterClass" class="form-select">
                            <option value="">All Classes</option>
                            @foreach (var cls in Model.AvailableClasses)
                            {
                                if (Model.FilterClass == cls)
                                {
                                    <option value="@cls" selected="selected">@cls</option>
                                }
                                else
                                {
                                    <option value="@cls">@cls</option>
                                }
                            }
                        </select>
                    </div>
                </div>

                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-primary">Apply Filters</button>
                </div>
            </form>

            <table class="table table-hover shadow-sm rounded bg-white">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Age</th>
                        <th>Class</th>
                        <th>Roll Number</th>
                        <th>Image</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model.Students)
                    {
                        <tr>
                            <td>@student.Name</td>
                            <td>@student.Age</td>
                            <td>@student.Class</td>
                            <td>@student.RollNumber</td>
                            <td>
                                @if (!string.IsNullOrEmpty(student.ImageUrl))
                                {
                                    <img src="@Url.Content(student.ImageUrl)" alt="Student Image" class="img-thumbnail" width="50" height="50" />
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
